        <div class="row" style="margin-top: 3em;">

            <div class="col-lg-12 d-flex align-items-stretch mt-4 mb-4 text-center">

                <div class="info-box info-confirm">
                    <i class="bi bi-check-circle-fill"></i>
                    <h3>Message Sent!</h3>
                    <p>
                        Thank you for contacting us! A member of our team will repond to your message using the email you provided (@Model.Email).
                        <br />
                        Please allow 1-3 business days for a response.
                    </p>

                    <br />

                    <div class="col-md-6 text-center" id="msgContents">
                        <p>
                            You sent the following message on @DateTime.Now.ToShortDateString() at @DateTime.Now.ToShortTimeString():
                        </p>
                        <br/>
                        <em>
                            @Model.Message
                        </em>
                    </div>

                    <br />


                </div>

            </div>

